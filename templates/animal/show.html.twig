{% extends "base.html.twig" %}

{% block title %}Animal{% endblock %}

{% block monTitre %}  Voici l'animal {{ animal.name }} {% endblock %}
{% block body %}
<div class="row align-items-center">
    <div class="col-2 text-center">
        <img src="{{ asset('build/images/' ~  animal.name  ~ '.png' ) }}" alt="">
    </div>
    <div class="col">
        <div>{{ animal.description }}</div>
        <div>Poids moyen : {{ animal.weight }}</div>
        <div>Dangereux :
            {% if animal.dangerous %}
                <span class="badge badge-danger">OUI</span>
            {% else %}
                <span class="badge badge-success">NON</span>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}