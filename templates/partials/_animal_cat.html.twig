{% if familly is defined %}
<a href="{{ path('show_animals_familly', { id : familly.id }) }}"><h2 class="border-bottom border-primary my-5">{{ familly.name|capitalize }}</h2></a>
{% else %}
<a href="{{ path('show_animals_continent', { id : continent.id }) }}"><h2 class="border-bottom border-primary my-5">{{ continent.name|capitalize }}</h2></a>
{% endif %}
<div class="row align-items-center">
    {% if familly is defined %}
        {% for animal in familly.animals %}
        <div class="col-6">
            <div class="col align-items-center">
                <div class="col-12 col-md-6 col-lg-2 align-items-center">
                    <img src="{{ asset('build/images/' ~ animal.name ~ '.png') }}" alt="{{ animal.name }}" class="img-fluid">
                </div>
                <div class="col text-center">
                    <h2><a href="{{ path('show_animal', { id : animal.id } ) }}">{{ animal.name }}</a></h2>
                    <div>{{ familly.description }}</div>
                </div>
            </div>
        </div>
        {% endfor %}
    {% else %}
        {% for animal in continent.animals %}
        <div class="col-6">
            <div class="col align-items-center">
                <div class="col-12 col-md-6 col-lg-2 align-items-center">
                    <img src="{{ asset('build/images/' ~ animal.name ~ '.png') }}" alt="{{ animal.name }}" class="img-fluid">
                </div>
                <div class="col text-center">
                    <h2><a href="{{ path('show_animal', { id : animal.id } ) }}">{{ animal.name }}</a></h2>
                </div>
            </div>
        </div>
        {% endfor %}
    {% endif %}      
</div>